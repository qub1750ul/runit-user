#!/usr/bin/bash
# shellcheck disable=2034

# env
# Default environment file

XDG_CONFIG_HOME="$HOME/.config"
XDG_CACHE_HOME="$HOME/.cache"
XDG_DATA_HOME="$HOME/.data"

RUNIT_USER_RTDIR="${XDG_RUNTIME_DIR}/runit"
RUNIT_USER_HOME="${XDG_CONFIG_HOME}/runit"
RUNIT_USER_RC_DIR_1="${RUNIT_USER_HOME}/rc/init"
RUNIT_USER_RC_DIR_3="${RUNIT_USER_HOME}/rc/stop"
RUNIT_USER_SVDIR="${RUNIT_USER_HOME}/sv"
RUNIT_USER_LOGPIPE="${RUNIT_USER_RTDIR}/log.pipe"
RUNIT_USER_RUNLEVEL="default"
RUNIT_USER_ENVFILE="${RUNIT_USER_HOME}/env"

# shellcheck disable=2153
RUNIT_USER_LIBDIR="$__RUNIT_USER_LIBDIR__"

RUNIT_LOGPIPE="$RUNIT_USER_LOGPIPE"
SVDIR="$RUNIT_USER_SVDIR"